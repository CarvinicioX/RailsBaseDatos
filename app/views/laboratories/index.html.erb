        <td><%= link_to 'Modificar', edit_laboratory_path(laboratory) , class: 'btn btn-default btn-sm' %></td>
        <td><%= link_to 'Eliminar', laboratory, method: :delete, data: { confirm: 'EstÃ¡ seguro?' }, class: 'btn btn-default btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

