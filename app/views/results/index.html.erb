<p id="notice"><%= notice %></p>

<h1>Results</h1>

<table>
  <thead>
    <tr>
      <th class="col-xs-2">Constancy</th>
      <th class="col-xs-2">Date</th>
      <th class="col-xs-4">Description</th>
      <th class="col-xs-4">Acciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |result| %>
      <tr>
        <td><%= result.constancy_id %></td>
        <td><%= result.date %></td>
        <td><%= result.description %></td>
        <td><%= link_to 'Show', result, class: 'btn btn-default btn-sm' %></td>
        <td><%= link_to 'Edit', edit_result_path(result), class: 'btn btn-default btn-sm' %></td>
        <td><%= link_to 'Destroy', result, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Result', new_result_path, class: 'btn btn-default btn-sm' %>
