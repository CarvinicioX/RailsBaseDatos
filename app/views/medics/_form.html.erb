<%= form_for(medic) do |f| %>
  <% if medic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(medic.errors.count, "error") %> prohibited this medic from being saved:</h2>

      <ul>
      <% medic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="field">
    <%= f.label :surname, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :surname, class: 'form-control' %>
    </div>
  </div>

  <div class="field">
    <%= f.label :birth_date, class: 'col-sm-2 control-label' %>
    <div class="col-sm-4">
    <%= f.date_select :birth_date, {date_separator: "</div><div class='col-sm-3'>"}, class: 'form-control'%>
    </div>
  </div>

  <div class="field">
    <%= f.label :specialty, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
    <%= f.text_field :specialty, class: 'form-control' %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit 'Guardar', class: 'btn btn-default btn-sm' %>
  </div>
<% end %>
