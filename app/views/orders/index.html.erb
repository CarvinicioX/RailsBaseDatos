<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th class="col-xs-3">>Constancy</th>
      <th class="col-xs-3">>Bill</th>
      <th class="col-xs-3">>Type</th>
      <th class="col-xs-3">>Observation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.constancy_id %></td>
        <td><%= order.bill_id %></td>
        <td><%= order.type %></td>
        <td><%= order.observation %></td>
        <td><%= link_to 'Show', order, class: 'btn btn-default btn-sm' %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path, class: 'btn btn-default btn-sm' %>
