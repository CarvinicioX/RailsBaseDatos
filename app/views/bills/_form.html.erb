  </div>

  <div class="field">
    <%= f.label :tax, class: 'col-sm-2 control-label' %>
    <%= f.text_field :tax, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :discount, class: 'col-sm-2 control-label' %>
    <%= f.text_field :discount, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :total, class: 'col-sm-2 control-label' %>
    <%= f.text_field :total, class: 'form-control' %>
